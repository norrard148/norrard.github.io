<script>
 var quiz_number=1;
    function leftMove() {
        if (quiz_number == 4) {
            $(".quiz-right").css({"display": "block"});
        }
          if (quiz_number == 2) {
            $(".quiz-left").css({"display": "none"});
        }
        if (quiz_number > 1) {
             quiz_number-=1
            $('.gg').animate({left : `-${(quiz_number-1)*95}vh`}, 600);
            
        }
    
    }


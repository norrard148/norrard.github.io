<script>
 var quiz_number=1;
    function leftMove() {
        if (quiz_number == 9) {
            $(".quiz-right").css({"display": "block"});
        }
          if (quiz_number == 2) {
            $(".quiz-left").css({"display": "none"});
        }
        if (quiz_number > 1) {
             quiz_number-=1
            $('.vene-car').animate({left : `-${(quiz_number-1)*100}vw`}, 600);
            
        }
    
    }

    function rightMove() {
         if (quiz_number == 1) {
            $(".quiz-left").css({"display": "block"});
        }
         if (quiz_number == 8) {
            $(".quiz-right").css({"display": "none"});
        }
        if (quiz_number < 9) {
            quiz_number+=1
            $('.vene-car').animate({left : `-${(quiz_number-1)*100}vw`}, 600);
               
        }
    }


</script> 
      <% if user_signed_in? %>
        <% if @post.likeauthor_id == nil %>
          <% @post.likeauthor_id = current_user.id.to_s() %>
          <% @post.save %>
          <% b = @post.likeauthor_id.split("/") %>
          a = <%= b.length %> 
          document.getElementById('like').innerHTML = a;
          $("#likeimg").attr("src","/assets/fullheart.svg");
